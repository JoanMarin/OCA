<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='recommended_apps']" position="after">
                <h2>Update Customer Warnings</h2>
                <div class="row mt16 o_settings_container" id="update_warn">
                    <div class="col-xs-12 col-md-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row" name="overdue_days">
                                <label for="overdue_days" class="col-md-5 o_light_label"/>
                                <field name="overdue_days"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
